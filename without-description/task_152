    function calculateAge(a, b) {
        return a - b === 1
            ? `You will be born in ${a - b} year.`
            : b - a === 1
                ? `You are ${b - a} year old.`
                : a > b
                    ? `You will be born in ${a - b} years.`
                    : (a < b)
                        ? `You are ${b - a} years old.`
                        : "You were born this very year!"
    }